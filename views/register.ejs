<% include ./partials/header.ejs %>

<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="JohnDoe123">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" placeholder="********">
            </div>
            <div class="form-group">
                <label for="avatar">Avatar URL</label>
                <input class="form-control" type="text" name="avatar" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" placeholder="John">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="lastName" placeholder="Doe">
            </div>
            <div class="form-group">
                <label for="email">E-mail Address</label>
                <input class="form-control" type="text" name="email" placeholder="JohnDoe@email.com">
            </div>
            <div class="form-group">
                <label for="username">Admin Code</label>
                <input class="form-control" type="text" name="admin" placeholder="Admin Code">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer.ejs %>