<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="new-camp-header">Create a New Campground:</h1>
        <div class="new-form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" placeholder="Name" name="campground[name]" id="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" placeholder="www.imgur.com/photo" name="campground[image]" id="image">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" placeholder="Cost Per Night (USD)" name="campground[price]" id="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Location</label>
                    <textarea rows="10 "class="form-control" type="text" placeholder="Write Detailed Description" name="campground[description]" id="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>




<% include ../partials/footer %>